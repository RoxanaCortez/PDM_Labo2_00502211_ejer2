<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    android:orientation="vertical"
    android:columnCount="3"
    android:rowCount="3"
    tools:context=".Ejercicio2" >


    <ImageView
        android:id="@+id/imagen"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_gravity="fill|top"
        android:layout_row="0"
        android:src="@drawable/poke"/>

    <ImageView
        android:id="@+id/imagen2"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill|top"
        android:layout_row="0"
        android:src="@drawable/poke"/>

    <ImageView
        android:id="@+id/imagen3"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_gravity="fill|top"
        android:layout_row="0"
        android:src="@drawable/poke"/>

    <ImageView
        android:id="@+id/imagen4"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_gravity="fill|top"
        android:layout_row="1"
        android:src="@drawable/poke"/>

    <ImageView
        android:id="@+id/imagen5"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_gravity="fill|top"
        android:layout_row="1"
        android:src="@drawable/poke"/>

    <ImageView
        android:layout_margin="2dp"
        android:id="@+id/imagen6"
        android:scaleType="fitXY"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_gravity="fill|top"
        android:layout_row="1"
        android:src="@drawable/poke"/>

    <ImageView
        android:id="@+id/imagen7"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_gravity="fill|top"
        android:layout_row="2"
        android:src="@drawable/poke"/>

    <ImageView
        android:id="@+id/imagen8"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_gravity="fill|top"
        android:layout_row="2"
        android:src="@drawable/poke"/>

    <ImageView
        android:id="@+id/imagen9"
        android:layout_margin="2dp"
        android:scaleType="fitXY"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_gravity="fill|top"
        android:layout_row="2"
        android:src="@drawable/poke"/>


</GridLayout>